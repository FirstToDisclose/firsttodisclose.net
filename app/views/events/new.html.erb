<%= form_for @event do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :start_time %>
    <%= f.datetime_local_field :start_time %>
  </div>
  <div>
    <%= f.label :end_time %>
    <%= f.datetime_local_field :end_time %>
  </div>
  <div>
    <%= f.label :street_1 %>
    <%= f.text_field :street_1 %>
  </div>
  <div>
    <%= f.label :street_2 %>
    <%= f.text_field :street_2 %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.select(:state, options_for_select(Event::STATES), {include_blank: true }) %>
  </div>
  <div>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>
  <%= f.submit %>
<% end %>
